<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bang.myapp.dao.IMemberRepository">
<resultMap type="com.bang.myapp.model.MemberVO" id="MemberMap">
	<result property="userId" column="userid"/>
	<result property="passWord" column="password"/>
	<result property="name" column="name"/>
	<result property="tel" column="tel"/>
	<result property="picture" column="picture"/>
	<result property="pictureSize" column="picture_size"/>
</resultMap>
<insert id="inserMember" parameterType="com.bang.myapp.model.MemberVO">
insert into emp_users values(#{userId},#{passWord},#{name},#{tel},#{picture},#{pictureSize})
</insert>
<select id="getPassword" parameterType="string" resultType="string">
select password from emp_uesrs where userid=#{userid}
</select>
<select id="getMember" parameterType="string" resultType="com.bang.myapp.model.MemberVO">
select userid, password, name, tel, picture, picture_size as pictureSize
from emp_users where userid=#{userid}
</select>
<select id="idCheck" parameterType="int" resultType="int">
insert count(userId) from emp_users where userId=#{userId}
</select>
</mapper>
	
	
	